<phpunit colors="true" bootstrap="src/Pinoco/_bootstrap.php">
    <testsuites>
        <testsuite name="PinocoTestAll">
            <directory>tests</directory>
            <exclude>tests/sandbox</exclude>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
