{
    "name": "pinoco/pinoco",
    "homepage": "https://github.com/tanakahisateru/pinoco",
    "description": "Web site development framework using PHP and (mainly) PHPTAL",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "microframework",
        "phptal"
    ],
    "authors": [
        {
            "name": "Hisateru Tanaka",
            "email": "tanakahisateru@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.1.2"
    },
    "require-dev": {
        "phptal/phptal": "^1.1",
        "smarty/smarty": ">=3.1.0",
        "twig/twig": ">=1.3.0",
        "phpunit/phpunit": "^4.8|^5.7",
        "squizlabs/php_codesniffer": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "phpstan/phpstan": "^0.9.2"
    },
    "autoload": {
        "psr-0": {
            "Pinoco": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cs": "./vendor/bin/phpcs --standard=phpcs.xml src tests",
        "stan": "./vendor/bin/phpstan analyse -l max -c phpstan.neon src --no-progress --no-interaction",
        "tests": ["@test", "@cs", "@stan"]
    }
}
